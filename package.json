{
  "name": "@hebcal/locales",
  "version": "2.1.0",
  "description": "Translations for Hebcal events in multiple languages",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hebcal-locales.git"
  },
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-locales/issues"
  },
  "homepage": "https://github.com/hebcal/hebcal-locales#readme",
  "dependencies": {
    "@hebcal/core": "^2.2.3"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:rollup": "rollup -c",
    "po2json": "node ./po2json.js po/*.po",
    "build": "npm run po2json && npm run build:rollup",
    "prepublish": "npm run build",
    "test": "ava"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "require": [
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/env"
        ]
      }
    },
    "inherit": true,
    "verbose": true
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "ava": "^3.10.1",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "ttag-cli": "^1.8.3"
  }
}
